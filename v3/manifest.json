{
    "manifest_version": 3,
    "name": "BUGS REPORT JIRA",
    "version": "1.0",
    "description": "Une extension qui affiche une bulle d'erreur et compte les fautes grammaticales",
  
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "*://*.atlassian.net/*",
      "https://votre-chatbot.streamlit.app/"
    ],
  
    "background": {
      "service_worker": "service-worker.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.atlassian.net/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [{
        "resources": ["content.js", "icon.png"],
        "matches": ["*://*.atlassian.net/*"]
      }]
  }